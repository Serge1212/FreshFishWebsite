@inject Microsoft.AspNetCore.Identity.SignInManager<User> signInManager;
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Floresta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="icon" href="~/images/Ws-small-icon.png" />
    <link rel="stylesheet" href="~/css/Admin/Admin.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-action="Index" asp-controller="Home">FreshFish</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("MainAdmin"))
                        {
                            <li class="nav-item m-1">
                                <a class="nav-link" asp-area="" asp-controller="Roles" asp-action="Index">Ролі</a>
                            </li>
                            <li class="nav-item m-1">
                                <a class="nav-link" asp-area="" asp-controller="Storage" asp-action="Index">Склади</a>
                            </li>
                            <li class="nav-item m-1">
                                <a class="nav-link" asp-area="" asp-controller="Admin" asp-action="GetOrders">Замовлення</a>
                            </li>
                        }
                        @if (signInManager.IsSignedIn(User) && User.IsInRole("AdminAssistant"))
                        {
                            <li class="nav-item m-1">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Storage"
                                    asp-action="GetStorage">Склад</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css"
        href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap5.min.css" />

    <script type="text/javascript" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
