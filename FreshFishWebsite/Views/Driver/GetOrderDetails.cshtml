@model FreshFishWebsite.ViewModels.OrderDetailsForDriverViewModel
@{
    Layout = "~/Views/Shared/_Driver_Layout.cshtml";
}
<h2>Назва підприємства @Model.CompanyName</h2>
<h3>Отримувач @Model.UserName @Model.UserSurname</h3>
<h3>Електронна адреса отримувача: @Model.UserEmail</h3>
<hr />
<h3>Адреса доставки: @Model.Address</h3>
<hr />
<h4>Cтатус замовлення: </h4>
    <form asp-action="ChangeOrderStatus" method="post" asp-route-orderItemsId="@Model.OrderItemsId">
        <select class="form-select" asp-for="Status">
        <option value="0">Очікує відправлення</option>
        <option value="1">В дорозі</option>
        <option value="2">Доставлено</option>
    </select>
    <input type="submit" value="Підтвердити" />
</form>
 <hr />
<div>Тут буде мапа, якшо Вася трошки напрягнеться</div>