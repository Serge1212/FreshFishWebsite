                <tr>
                    <td scope="col" class="h6 col-sm-1">#</td>
                    <th scope="col" class="h6">Адреса складу</th>
                    <th scope="col" class="h6 col-sm-3">Пошта адміністратора</th>
                    <th scope="col" class="h6 col-sm-3">Дія</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Address</td>
                        <td>@item.StorageAdmin</td> @*don't loading admin mail address*@
                        <td>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
