<div class="modal fade" id="exampleModalCreate" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Додати новий склад</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="createStorageModal" class="modal-body">

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalEdit" tabindex="-1" aria-labelledby="exampleModalEditLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Редагувати склад</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="editStorageModal" class="modal-body">

            </div>
           
        </div>
    </div>
</div>
<div class="container-xxl">
    <h4 class="text-secondary">Список складів</h4>
    <div class="table-responsive-sm position-relative">
        @*asp-action="Create"*@
        <table class="table table-striped table-bordered basic-table">
            <button id="createStorageButton"
                class="btn btn-sm btn-outline-primary position-absolute top-0 start-0">
                Додати склад
            </button>
            <thead>
                <tr>
                    <td scope="col" class="h6 col-sm-1">#</td>
                    <th scope="col" class="h6">Адреса складу</th>
                    <th scope="col" class="h6 col-sm-3">Пошта адміністратора</th>
                    <th scope="col" class="h6 col-sm-3">Дія</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Address</td>
                        <td>@item.StorageAdmin</td>
                        <td>
                            <button class="btn btn-sm btn-primary" onclick="editStorage(@item.Id)">Редагувати</button>
                            <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Видалити
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/js/Storage/storage.js"></script>