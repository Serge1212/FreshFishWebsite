@model FreshFishWebsite.ViewModels.CreateStorageWorkerViewModel
@{
    ViewBag.Title = "Додати водія";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<form asp-action="AddDriver" asp-controller="Storage">
    <input type="hidden" asp-for="StorageId" />
    <div class="form-group">
        <label asp-for="Email" class="control-label">Електронна пошта адміністратора складу</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Додати" class="btn btn-default" />
    </div>
</form>