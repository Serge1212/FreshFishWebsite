@model FreshFishWebsite.ViewModels.StorageViewModel
<form asp-action="Create" asp-controller="Storage">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="StorageNumber" class="control-label">Номер складу</label>
        <input type="number" asp-for="StorageNumber" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label">Адреса</label>
        <input type="text" asp-for="Address" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StorageAdminEmail" class="control-label">Електронна пошта адміністратора складу</label>
        <input type="text" asp-for="StorageAdminEmail" class="form-control" />
        <span asp-validation-for="StorageAdminEmail" class="text-danger"></span>
    </div>
     <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Додати</button>
    </div>
</form>
