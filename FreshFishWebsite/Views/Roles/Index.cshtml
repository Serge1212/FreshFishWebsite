@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Ролі";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

  
@*TODO #31 Create: add roles on this page; list of users in the table on this page; @Serge1212  *@
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Додати нову роль</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="Create" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Нова роль</label>
                        <input name="name" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary">Додати</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="container-xxl">
    <div class="table-responsive-sm position-relative"> @*asp-action="Create"*@
        <button type="button" data-bs-toggle="modal" data-bs-target="#exampleModal"
            class="btn btn-primary position-absolute top-0 end-0">Додати ролі</button>
        <table id="role-table" class="table table-striped table-bordered caption-top">
            <caption>Список ролей</caption>
            <thead>
                <tr>
                    <th scope="col" class="h5">Назва</th>
                    <th scope="col" class="h5">Дія</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Name</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    Видалити
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <a asp-action="UserList" class="btn btn-success">Список користувачів</a>
</div>