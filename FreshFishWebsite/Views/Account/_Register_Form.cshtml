@model FreshFishWebsite.ViewModels.RegisterViewModel

<div class="form-group  mb-2">
    <label for="name1">Ім’я </label>
    <input type="name" id="name1" class="form-control" asp-for="Name" />
    <span asp-validation-for="Name" class="invalid-feedback"></span>
</div>
<div class="form-group  mb-2">
    <label for="sname1">Прізвище </label>
    <input type="surname" id="sname1" class="form-control" asp-for="Surname" />
    <span asp-validation-for="Surname" class="invalid-feedback"></span>
</div>
<div class="form-group  mb-2">
    <label for="password1">Пароль </label>
    <input type="password" id="password1" class="form-control" asp-for="Password" />
    <span asp-validation-for="Password" class="invalid-feedback"></span>
</div>
<div class="form-group  mb-2">
    <label for="password2">Підтвердіть пароль </label>
    <input type="password" id="password2" class="form-control" asp-for="PasswordConfirm" />
    <span asp-validation-for="PasswordConfirm" class="invalid-feedback"></span>
</div>
<div class="form-group m-0">
    <button type="submit" class="btn btn-primary w-100 d-md-block mb-2">Реєстрація</button>
</div>
