@model FreshFishWebsite.ViewModels.LoginViewModel

@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Вхід - FreshFishWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="../css/Auth/auth.css" type="text/css" media="screen" runat="server" />
</head>

<body class="my-login-page">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="brand">
                        <img src="~/img/Big-Webshop-logo.png" class="main-logo" alt="logo">
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Вхід в акаунт</h4>
                            <form method="post" asp-controller="Account" asp-action="Login"
                                asp-route-returnUrl="@Model.ReturnUrl">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group mb-2">
                                    <label for="inputEmail1" class="form-label">Електронна пошта</label>
                                    <input type="email" id="inputEmail1" class="form-control" asp-for="Email" />
                                </div>
                                <div class="form-group  mb-2">
                                    <label for="password1">Пароль
                                        <a asp-action="ForgotPassword" class="float-right">Забув пароль?</a>
                                    </label>
                                    <input type="password" id="password1" class="form-control" asp-for="Password" />
                                </div>
                                <div class="form-check mb-2">
                                     <div class="custom-checkbox custom-control">
                                         <input class="form-check-input" type="checkbox"
                                            asp-for="RememberMe" />
                                        <label class="form-check-label" asp-for="RememberMe"> Запам'ятати мене </label>
                                     </div>
                                    
                                </div>
                                <div class="form-group m-0">
                                     <button type="submit" class="btn btn-primary w-100 d-md-block mb-2">Увійти</button>
                                </div>
                                <div class="mt-3 text-center">
									Немає акаунта? <a asp-controller="Account" asp-action="Register">Реєстрація</a>
								</div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
