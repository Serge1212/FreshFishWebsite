<!-- Form Module-->

<div class="module form-module">
    <form method="post" class="form" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <h2>Вхід в акаунт</h2>
        <div asp-validation-summary="ModelOnly"></div>
        <input type="email" placeholder="Електронна пошта" asp-for="Email" />
        <span asp-validation-for="Email"></span>
        <input type="password" placeholder="Пароль" asp-for="Password" />
        <span asp-validation-for="Password"></span>
        <div class="form_item">
            <input type="checkbox" class="form_check_input" asp-for="RememberMe">
            <label class="form_check_label" asp-for="RememberMe">Запам'ятати мене</label>
        </div>
        <button type="submit">Увійти</button>
        <div class="form_item form_check">
            <span class="account_text">В тебе немає акаунта? </span>
            <a asp-controller="Account" asp-action="Register"> Реєстрація</a>
        </div>
    </form>
    <div class="cta"><a asp-action="ForgotPassword" class="fogotpassword">Забув пароль?</a></div>
</div>
