@model FreshFishWebsite.ViewModels.RegisterStorageWorker

<h2>Склад №@Model.StorageNumber</h2>
<h2>Адреса @Model.StorageAddress</h2>
<form class="form" method="post" asp-controller="Account" asp-action="RegisterStorageDriver">
    <input type="hidden" asp-for="StorageId" />

    <div asp-validation-summary="ModelOnly"></div>
    <div class="form_item">
        <input placeholder="Ім’я" asp-for="Name" class="form_control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form_item">
        <input placeholder="Прізвище" asp-for="Surname" class="form_control" />
        <span asp-validation-for="Surname"></span>
    </div>
    <div class="form_item">
        <input type="email" value="@Model.WorkerEmail" readonly placeholder="Електронна пошта" asp-for="Email" class="form_control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form_item">
        <input type="hidden" value="FreshFish" asp-for="Company" />
    </div>
    <div class="form_item">
        <input type="hidden" value="м. Коломия, вул. Чехова 15" asp-for="CompanyAddress" />
    </div>
    <div class="form_item">
        <input type="password" placeholder="Пароль" asp-for="Password" class="form_control" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form_item">
        <input type="password" placeholder="Підтвердіть пароль" asp-for="PasswordConfirm" class="form_control" />
        <span asp-validation-for="PasswordConfirm"></span>
    </div><br />

    <div class="form_buttons cancel_select">
        <a class="cancel_button" asp-controller="Home" asp-action="Index">Скасувати</a>
        <input type="submit" class="register_button" value="Зареєструватися" />
    </div>
</form>
