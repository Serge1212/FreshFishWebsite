@model FreshFishWebsite.ViewModels.RegisterViewModel

@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Реєстрація - FreshFishWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../css/Auth/auth.css" type="text/css" media="screen" runat="server" />
</head>
 <body class="my-login-page">
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="brand">
                         <a asp-controller="Home" asp-action="Index"><img src="~/img/Big-Webshop-logo.png" class="main-logo" alt="logo"></a>
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Реєстрація</h4>
                            <form method="post" asp-controller="Account" asp-action="Register">
                                <div asp-validation-summary="ModelOnly"></div>
                                <div class="form-group mb-2">
                                    <label for="inputEmail1" class="form-label">Електронна пошта</label>
                                    <input type="email" id="inputEmail1" class="form-control" asp-for="Email" />
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                </div>
                                <div class="form-group  mb-2">
                                    <label for="company1">Підприємство </label>
                                    <input type="text" id="company1" class="form-control" asp-for="Company" />
                                    <span asp-validation-for="Company" class="invalid-feedback"></span>
                                </div>
                                <div class="form-group  mb-2">
                                    <label for="company1">Адреса підприємства </label>
                                    <input type="text" id="company1" class="form-control" asp-for="CompanyAddress" />
                                    <span asp-validation-for="CompanyAddress" class="invalid-feedback"></span>
                                </div>
                                 @await Html.PartialAsync("_Register_Form", new FreshFishWebsite.ViewModels.RegisterViewModel())
                                <div class="mt-3 text-center">
									Вже є акаунт? <a asp-controller="Account" asp-action="Login">Увійти</a>
								</div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body> 