@model FreshFishWebsite.ViewModels.RegisterStorageWorker
@{
    Layout = null;
}
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Реєстрація - FreshFishWebsite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="../css/Auth/auth.css" type="text/css" media="screen" runat="server" />
</head>
<body>

    <h2>Склад №@Model.StorageNumber</h2>
    <h2>Адреса @Model.StorageAddress</h2>
    <section class="h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="brand">
                        <img src="~/img/Big-Webshop-logo.png" class="main-logo" alt="logo">
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Реєстрація</h4>
                            <form method="post" asp-controller="Account" asp-action="RegisterStorageAdmin">
                                <div asp-validation-summary="ModelOnly"></div>
                                <input type="hidden" asp-for="StorageId" />
                                <div class="form-group mb-2">
                                    <label asp-for="WorkerEmail" class="form-label">Електронна пошта</label>
                                    <input type="email" value="@Model.WorkerEmail" class="form-control" asp-for="Email" />
                                    <span asp-validation-for="Email" class="invalid-feedback"></span>
                                </div>
                                <input type="hidden" value="FreshFish" asp-for="Company" />
                                <input type="hidden" value="м. Коломия, вул. Чехова 15" asp-for="CompanyAddress" />
                                @await Html.PartialAsync("_Register_Form")
                                <div class="mt-3 text-center">
                                    Вже є акаунт? <a asp-controller="Account" asp-action="Login">Увійти</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>