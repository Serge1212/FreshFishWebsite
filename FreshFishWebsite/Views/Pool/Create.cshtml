@model FreshFishWebsite.ViewModels.PoolVM.PoolViewModel
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
    ViewData["Title"] = "Створити басейн";
}
<div class="container">
    <div class="card col m-1">
        <div class="card-body">
            <h5 class="card-title text-center">Створити басейн</h5>
            <form asp-action="Create">
                <input type="hidden" asp-for="StorageId" />
                <div class="form-group mb-2">
                    <label asp-for="PoolNumber" class="control-label mb-1">Номер басейну</label>
                    <input type="text" asp-for="PoolNumber" class="form-control" />
                </div>
                <div class="form-group mb-2">
                    <label asp-for="MaxProductsKg" class="control-label mb-1">Максимальна ємність(кг)</label>
                    <input type="number" asp-for="MaxProductsKg" class="form-control" />
                </div>
                <div class="form-group mb-1 text-end">
                    <button class="btn btn-primary " type="submit">Додати</button>
                </div>
            </form>
        </div>

    </div>
</div>
