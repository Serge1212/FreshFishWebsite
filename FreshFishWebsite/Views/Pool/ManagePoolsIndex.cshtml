@model FreshFishWebsite.ViewModels.LitePoolViewModel

@{
    ViewData["Title"] = "Список басейнів";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<h5 class="card-title">Список басейнів</h5>
<a asp-action="Create" class="btn btn-secondary btn-sm mb-1" asp-route-storageId="@Model.StorageId">Створити басейн</a>

<div class="table-responsive-sm position-relative">
    <table class="table table-striped table-bordered caption-top">
        <thead>
            <tr>
                <th scope="col" class="h5 col-sm-1">#</th>
                <th scope="col" class="h5">Максимальна кількість(кг)</th>
                <th scope="col" class="h5 col-4">Дія</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Pools)
            {
                <tr>
                    <td>@p.PoolNumber</td>
                    <td>@p.MaxProductsKg</td>
                    <td>
                        <div class="d-flex p-2 bd-highlight">
                            <form asp-action="Delete" asp-route-id="@p.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-danger mb-1 mx-1">
                                    Видалити
                                </button>
                            </form>

                            <a class="btn btn-sm btn-primary mx-1 mb-1" asp-action="Edit"
                                asp-route-id="@p.Id">Редагувати</a>
                            <a class="btn btn-sm btn-primary mx-1 mb-1" asp-action="AddProductsToPool"
                                asp-route-storageId="@Model.StorageId" asp-route-poolId="@p.Id">Додати продукти</a>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>