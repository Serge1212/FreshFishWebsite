@model FreshFishWebsite.ViewModels.LitePoolViewModel

@{
    ViewData["Title"] = "Басейни";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<a asp-action="Create" asp-route-storageId="@Model.StorageId">Створити басейн</a>
<div class="table-responsive-sm position-relative">
    <table class="table table-striped table-bordered caption-top">
        <caption>Список басейнів</caption>
        <thead>
            <tr>
                <th scope="col" class="h5">Номер басейну</th>
                <th scope="col" class="h5">Максимальна кількість(кг)</th>
                <th scope="col" class="h5 col-sm-1">Дія</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Pools)
            {
                <tr>
                    <td>@p.PoolNumber</td>
                    <td>@p.MaxProductsKg</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@p.Id" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Видалити
                            </button>
                        </form>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@p.Id">Редагувати</a>
                        <a class="btn btn-sm btn-primary" asp-action="AddProductsToPool"
                           asp-route-storageId="@Model.StorageId" asp-route-poolId="@p.Id">Додати продукти</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>