@model FreshFishWebsite.ViewModels.ProductViewModel
@{
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}
<form asp-action="Create"  enctype="multipart/form-data">
    <input type="hidden" asp-for="StorageId" />
    <div class="form-group">
        <label asp-for="ProductName" class="control-label">Назва</label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label">Ціна</label>
        <input type="number" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Дата виготовлення</label>
        <input type="date" asp-for="Date" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Кількість</label>
        <input type="text" asp-for="Amount" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Calories" class="control-label">Калорії</label>
        <input type="number" asp-for="Calories" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Опис</label>
        <textarea  asp-for="Description" />
    </div>
    <div class="form-group">
        <label asp-for="IsSold" class="control-label">Продано</label>
        <input type="checkbox" asp-for="IsSold" class="custom-checkbox" />
    </div>
    <div class="form-group">
        <label asp-for="ImageFile" class="control-label">Зображення</label>
        <input  asp-for="ImageFile" accept="image/*" />
    </div>
    <div class="form-group">
        <input type="submit" value="Додати" class="btn btn-default" />
    </div>
</form>