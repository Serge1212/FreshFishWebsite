@model FreshFishWebsite.ViewModels.ShowUserViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    @if (User.Identity.IsAuthenticated)
    {
        <p class="text-body h3 mt-2">Користувач: @Model.Name @Model.Surname </p>
        <p class="text-body h3 mt-2">Email: @Model.Email </p>
        <form class="mt-2" method="post" asp-controller="Account" asp-action="Logout">
            <input type="submit" class="btn btn-danger" value="Вийти" />
        </form>
    }
    else
    {
    <a asp-controller="Account" asp-action="Login">Увійти</a>
    }
</div>
